<div id="timerTool">
  <h2>Countdown Timer</h2>

  <div class="timerPanel">
    <span id="timeLeft">00:00.0</span>
  </div>

  <div class="progress" id="fullTimerBar">
    <div class="progress-bar progress-bar-success progress-bar-striped active" id="timerBar" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
    </div>
  </div>

  <input type="text" id="timer"/>
  <button id="playButton" onclick="startTimer()"><span class="glyphicon glyphicon-play"></span></button>
  <button id="pauseButton" onclick="pauseTimer()" disabled><span class="glyphicon glyphicon-pause"></span></button>
  <button id="stopButton"onclick="stopTimer()"><span class="glyphicon glyphicon-stop"></span></button>
</div>

<% @extraScripts = '<script src="/js/timer.js"></script>' %>
