<div>
  <p>Something something make a random password</p>

  <ul>
    <li><input type="checkbox" name="lowerCase" id="lowerCase" checked/><label for="lowerCase">Lowercase Letters</label></li>
    <li><input type="checkbox" name="upperCase" id="upperCase"/><label for="upperCase">Uppercase Letters</label></li>
    <li><input type="checkbox" name="numbers" id="numbers"/><label for="numbers">Numbers</label></li>
    <li><input type="checkbox" name="symbols" id="symbols"/><label for="symbols">Symbols</label></li>
    <li><input type="checkbox" name="custom" id="custom"/><label for="custom">Custom: </label><input type="text" id="customArray"/></li>
    <li>
      <label for="length">Length</label>
      <select name="length" id="length">
        <option>8</option>
        <option>9</option>
        <option>10</option>
        <option>11</option>
        <option>12</option>
        <option>13</option>
        <option>14</option>
        <option>15</option>
        <option>16</option>
      </select>
    </li>
  </ul>
  <button onclick="createPassword()">Generate</button>
  <input id="result" type="text" disabled="disabled"/>
</div>

